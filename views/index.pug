extends layout

block content
  h1= title
  p Welcome to #{title} <br>
    button(type='button',class='btn btn-warning' onClick="doBump()") Press Me
    a(href="http://icecream") 
    div(id="bump") Bump the count
    script.
      let count =0
      let bump=1
      function doBump(){
        count+=bump 
        bump=bump+1 
        document.getElementById('bump').innerHTML=`count ${count} with bump ${bump}`

      }